<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1CFFB"
    tools:context=".sarkilar">
    <TextView
        android:id="@+id/baslik"
        android:layout_width="333dp"
        android:layout_height="63dp"
        android:text="Şarkılardan Alıntılar"
        android:textColor="#182678"
        android:textSize="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/aciklamaa"
        android:layout_width="308dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:text="@string/sarkilar_aciklama"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslik"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/sarkilarSecBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEÇ"
        android:textColor="@color/white"
        app:backgroundTint="#182678"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aciklamaa"
        app:layout_constraintVertical_bias="0.213" />

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="402dp"
        android:layout_height="86dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anonimGirisBtn"
        app:layout_constraintVertical_bias="0.761">

        <com.huawei.hms.ads.banner.BannerView
            android:id="@+id/hw_banner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:adId="testw6vs28auh3"
            app:bannerSize="BANNER_SIZE_360_57" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>